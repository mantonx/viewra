FROM golang:alpine AS development

# Install build dependencies for CGO (required for SQLite) and ffmpeg for audio processing
RUN apk add --no-cache gcc musl-dev sqlite-dev ffmpeg

# Install air for hot reloading
RUN go install github.com/air-verse/air@latest

WORKDIR /app

# Set CGO_ENABLED=1 for SQLite support
ENV CGO_ENABLED=1

# Create cache directory with proper permissions - use a different location
RUN mkdir -p /go/cache && chmod -R 777 /go/cache
ENV GOCACHE=/go/cache

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Use go run to ensure we get the latest code with all modules
CMD ["go", "run", "/app/cmd/viewra/main.go"]
