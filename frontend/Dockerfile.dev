FROM node:20-alpine AS development

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Replace the vite config with Docker-specific version
RUN cp vite.config.docker.ts vite.config.ts

# Make startup script executable
RUN chmod +x docker-startup.sh

# Expose port
EXPOSE 5173

# Start development server with hot reload using our startup script
CMD ["./docker-startup.sh"]
