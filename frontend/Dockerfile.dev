FROM node:20-alpine AS development

WORKDIR /app

# Install dependencies as root first
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Replace the vite config with Docker-specific version
RUN cp vite.config.docker.ts vite.config.ts

# Create node_modules directory with proper permissions
RUN mkdir -p /app/node_modules && \
    chmod 755 /app/node_modules && \
    chmod -R 755 /app

# Expose port
EXPOSE 5173

# Use sh to run the startup script (works even if not executable)
CMD ["sh", "./docker-startup.sh"]